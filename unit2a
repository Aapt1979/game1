    <title>Letter Sound Memory Match</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        /* Custom CSS for visual appeal */
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #FF6B6B, #FFD93D, #6BCB77); /* Bright, cheerful gradient */
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .card-container {
            perspective: 1000px; /* For 3D flip effect */
            height: 120px;
            width: 80px;
        }

        .card {
            width: 100%;
            height: 100%;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.6s ease-in-out;
            border-radius: 12px;
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
            cursor: pointer;
        }

        .card-inner {
            position: absolute;
            width: 100%;
            height: 100%;
            text-align: center;
            line-height: 120px;
            font-size: 24px;
            font-weight: 900;
            color: #333;
            border-radius: 12px;
            backface-visibility: hidden;
        }

        .card-face-down {
            background-color: #4A90E2; /* Bright blue for the back */
            color: white;
            font-size: 1.5rem;
            transform: rotateY(0deg);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-face-up {
            background-color: #ffffff;
            transform: rotateY(180deg);
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.25rem;
            line-height: 1.5;
            padding: 5px;
        }
        
        /* Card is flipped */
        .flipped .card {
            transform: rotateY(180deg);
        }

        /* Card has been matched and disappears */
        .matched {
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s 0.6s, opacity 0.6s linear;
        }

        /* Styling for the picture card content */
        .card-face-up .picture-content {
            font-size: 0.9rem;
            font-weight: 700;
            color: #16A085;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            line-height: 1.1;
        }
        .card-face-up .picture-content .emoji {
            font-size: 30px;
        }

        /* Game Over Modal */
        #gameOverModal {
            transition: opacity 0.3s ease-in-out;
            pointer-events: none;
        }
        #gameOverModal.active {
            opacity: 1;
            pointer-events: auto;
        }

        /* Responsive grid adjustment */
        @media (min-width: 640px) {
            .card-container {
                height: 150px;
                width: 100px;
            }
        }
